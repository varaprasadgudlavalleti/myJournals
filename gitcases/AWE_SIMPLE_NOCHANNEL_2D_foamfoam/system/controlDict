functions
{
	PWall_Ne
	{
	name    NE;
	fields  (INe UNe);

	operation areaAverage;

	type            surfaceFieldValue;
	libs            ("libfieldFunctionObjects.so");

	writeControl    runTime;
	//writeControl    timeStep;
	writeInterval   0.25;

	writeFields     false;
	log             false;

	regionType  patch;
	}


	PWall_Pe
	{
	name    PE;
	fields  (IPe UPe);

	operation areaAverage;

	type            surfaceFieldValue;
	libs            ("libfieldFunctionObjects.so");

	writeControl    runTime;
	//writeControl    timeStep;
	writeInterval   0.25;

	writeFields     false;
	log             false;

	regionType  patch;

	}


}
