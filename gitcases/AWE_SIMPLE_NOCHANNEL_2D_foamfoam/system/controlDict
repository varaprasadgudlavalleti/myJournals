FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //
application     currentTransport;

startFrom       startTime;

startTime       0;

stopAt          endTime;

endTime         50;

deltaT          0.0005;

writeControl    adjustableRunTime;//timeStep;

writeInterval   5;//250;

purgeWrite      0;

writeFormat     ascii;

writePrecision  6;

writeCompression on;

timeFormat      general;

timePrecision   6;

runTimeModifiable true;

adjustTimeStep 	yes;
maxCo 		1;
maxDeltaT	0.05;


